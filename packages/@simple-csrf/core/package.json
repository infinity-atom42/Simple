{
	"name": "@simple-csrf/core",
	"version": "0.1.1",
	"description": "CSRF core package used alone or useful to create other packages",
	"keywords": [
		"csrf",
		"core",
		"tokens",
		"typescript",
		"ts"
	],
	"homepage": "https://github.com/infinity-atom42/Simple/tree/main/packages/%40simple-csrf/core#readme",
	"bugs": {
		"url": "https://github.com/infinity-atom42/Simple/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/infinity-atom42/Simple",
		"directory": "packages/@simple-csrf/core"
	},
	"license": "MIT",
	"author": "Infinity Atom",
	"sideEffects": false,
	"type": "module",
	"exports": {
		"./*": {
			"types": "./dist/*.d.ts",
			"import": "./dist/*.js",
			"require": "./dist/*.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "vite build",
		"check-types": "tsc --noEmit",
		"clean": "rm -rf node_modules .turbo dist",
		"lint": "eslint . --max-warnings 0",
		"test": "vitest run",
		"watch": "vite build --watch"
	},
	"publishConfig": {
		"access": "public"
	}
}
